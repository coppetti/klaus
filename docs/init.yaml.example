# Klaus - Configuration Example
# =========================================
# Copy this file to init.yaml and fill in your values
# DO NOT commit init.yaml to git (it's in .gitignore)
# 
# Setup modes:
#   - IDE Only: Web UI and Telegram disabled
#   - WEB Only: web.enabled=true, others may vary
#   - IDE + WEB: Both IDE and Web UI enabled
#   - Full: IDE + Web UI + Telegram (configure Telegram via Web UI)

agent:
  name: "Your Agent Name"
  template: "general"  # Options: general, architect, developer, finance, legal, marketing, ui
  personality:
    tone: "professional"  # professional, casual, enthusiastic, direct
    style: "balanced"     # balanced, brief, detailed
    language: "en"

user:
  name: "Your Name"
  role: "Your Role"
  experience_level: "intermediate"  # beginner, intermediate, advanced, expert
  preferences:
    communication: "concise"  # concise, detailed, bullet_points
    code_style: "clean"

mode:
  primary: "ide"  # Options: ide, hybrid
  ide:
    enabled: true
  telegram:
    enabled: false
    # NOTE: Bot token and Chat ID are configured via Web UI (Settings â†’ Telegram Bot)
    # Or set via environment variables: TELEGRAM_BOT_TOKEN, TELEGRAM_CHAT_IDS
  web:
    enabled: false  # Set to true for Web UI mode
    port: 8082

provider:
  name: "kimi"  # kimi, anthropic, openai, google, openrouter, custom
  api_key: ""   # Set via environment variable in .env file
  model:
    kimi: "moonshot-v1-8k"
  parameters:
    temperature: 0.7
    max_tokens: 4096
    top_p: 0.9

memory:
  enabled: true
  backend: "hybrid"  # sqlite, hybrid (sqlite + graph)
  sqlite:
    path: "./workspace/memory/agent_memory.db"

# Workspace folders (auto-created):
# - workspace/SOUL.md       : Agent identity and personality
# - workspace/USER.md       : Your profile and preferences  
# - workspace/memory/       : SQLite database + Kuzu Graph for persistent memory
# - workspace/projects/     : Your projects (accessible in IDE and Web UI)
# - workspace/uploads/      : File uploads (via Web UI)
